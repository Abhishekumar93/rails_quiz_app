<p id="notice"><%= notice %></p>

<h1 align="center">Answers</h1>

<table align="center" width="800">
  <thead>
    <tr>
      <th align="center">Q.No</th>
      <th align="center">Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td align="center"><%= answer.question_Q_No %></td>
        <td align="center"><%= answer.Answer %></td>
        <td><%= link_to 'Next', new_answer_path %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
